<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewNotification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:paddingStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/temp" />

    <TextView
        android:id="@+id/titleNot"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/imageViewNotification"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/imageViewNotification"
        android:paddingStart="20dp"
        android:paddingTop="0dp"
        android:text="Warning"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewNotification"
        app:layout_constraintTop_toTopOf="@+id/imageViewNotification" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-104dp"
        android:layout_marginEnd="-141dp"
        android:layout_marginBottom="-6dp"
        android:layout_alignBottom="@id/titleNot"
        android:layout_toStartOf="@id/titleNot"
        android:paddingStart="20dp"
        android:paddingTop="0dp"
        android:paddingBottom="11dp"
        android:text="Device is Heat Up!"
        android:textAlignment="center"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/titleNot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="-209dp"
        android:background="@drawable/gredientt"
        android:gravity="center"
        android:maxWidth="40dp"
        android:minWidth="70dp"
        android:padding="5dp"
        android:text="Cool" />


</RelativeLayout>
